{% extends 'base.html.twig' %}

{% block title %}Ver Provincia{% endblock %}

{% block body %}
<style>
    .container-custom { max-width: 900px; margin: 0 auto; padding: 20px 15px; }
    .page-header { background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%); border-radius: 15px; padding: 24px; margin-bottom: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.5); border: 2px solid rgba(37, 99, 235, 0.4); display:flex; justify-content:space-between; align-items:center; }
    .page-title { margin:0; font-weight:bold; font-size:1.8rem; background: linear-gradient(90deg,#2563eb 0%,#60a5fa 100%); -webkit-background-clip:text; -webkit-text-fill-color:transparent; }
    .card-detail { background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%); border-radius: 15px; padding: 28px; box-shadow: 0 10px 30px rgba(0,0,0,0.5); border: 2px solid rgba(37, 99, 235, 0.3); color:#e5e7eb; }
    .detail-row { display:flex; padding:14px 0; border-bottom:1px solid rgba(37,99,235,0.08); align-items:center; }
    .detail-row:last-child { border-bottom:none; }
    .detail-label { font-weight:700; color:#60a5fa; min-width:160px; text-transform:uppercase; letter-spacing:0.6px; }
    .detail-value { color:#e5e7eb; flex:1; }
    .action-buttons { display:flex; gap:12px; margin-top:18px; flex-wrap:wrap; }
    .btn-custom { padding:10px 18px; border-radius:10px; font-weight:700; color:white; text-decoration:none; display:inline-flex; align-items:center; gap:8px; }
    .btn-back { background: linear-gradient(135deg,#4b5563,#6b7280); }
    .btn-edit { background: linear-gradient(135deg,#0f3460,#1a73e8); }
    .btn-delete { background: linear-gradient(135deg,#dc2626,#991b1b); border:none; cursor:pointer; }
</style>

<div class="container-custom">
    <div class="page-header">
        <h1 class="page-title">üó∫Ô∏è Provincia</h1>
        <div class="text-muted">ID: {{ provincium.id }}</div>
    </div>

    <div class="card-detail">
        <div class="detail-row">
            <div class="detail-label">ID</div>
            <div class="detail-value">#{{ provincium.id }}</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Nombre</div>
            <div class="detail-value">{{ provincium.nombre }}</div>
        </div>

        <div class="action-buttons">
            <a href="{{ path('app_provincia_index') }}" class="btn-custom btn-back">‚¨ÖÔ∏è Volver al Listado</a>
            
            <form method="post" action="{{ path('app_provincia_delete', {'id': provincium.id}) }}" onsubmit="return confirm('¬øSeguro que deseas eliminar esta provincia?');" style="display:inline-block;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ provincium.id) }}">
                <button class="btn-custom btn-delete">üóëÔ∏è Eliminar Provincia</button>
            </form>
        </div>
    </div>
</div>

{% endblock %}
