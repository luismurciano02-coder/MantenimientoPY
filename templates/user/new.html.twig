{% extends 'base.html.twig' %}

{% block title %}Nuevo Usuario{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(135deg, #000000 0%, #1a1a2e 50%, #0f3460 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 20px 0;
    }
    .container-custom {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 15px;
    }
    .page-header {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border: 2px solid rgba(37, 99, 235, 0.4);
        text-align: center;
    }
    .page-title {
        margin: 0;
        background: linear-gradient(90deg, #2563eb 0%, #60a5fa 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: bold;
        font-size: 2.5rem;
    }
    .form-card {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border: 2px solid rgba(37, 99, 235, 0.3);
        margin-bottom: 30px;
    }
    .form-label {
        color: #ffffff;
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .form-control {
        background: rgba(26, 26, 46, 0.5);
        border: 2px solid rgba(37, 99, 235, 0.3);
        color: #ffffff;
        border-radius: 8px;
        padding: 12px 15px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }
    .form-control:focus {
        background: rgba(26, 26, 46, 0.8);
        border-color: #2563eb;
        color: #ffffff;
        box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.25);
    }
    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }
    .form-control option {
        background: #1a1a2e;
        color: #ffffff;
    }
    .form-check {
        margin-bottom: 15px;
        padding: 12px 15px;
        background: rgba(37, 99, 235, 0.2);
        border-radius: 8px;
        border: 2px solid rgba(37, 99, 235, 0.4);
        transition: all 0.3s ease;
    }
    .form-check:hover {
        background: rgba(37, 99, 235, 0.3);
        border-color: #2563eb;
    }
    .form-check-input {
        width: 22px;
        height: 22px;
        margin-right: 12px;
        cursor: pointer;
        accent-color: #2563eb;
    }
    .form-check-label {
        color: #ffffff;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
    }
    .form-text {
        color: rgba(255, 255, 255, 0.6) !important;
        font-size: 0.875rem;
        margin-top: 5px;
    }
    /* Forzar color blanco en todos los elementos del formulario */
    .form-card input,
    .form-card select,
    .form-card textarea,
    .form-card label {
        color: #ffffff !important;
    }
    .form-card input::placeholder,
    .form-card textarea::placeholder {
        color: rgba(255, 255, 255, 0.5) !important;
    }
    .action-buttons {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        margin-top: 30px;
    }
    .btn-custom {
        padding: 12px 30px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
    }
    .btn-back {
        background: linear-gradient(135deg, #4b5563 0%, #6b7280 100%);
        color: white;
    }
    .btn-back:hover {
        background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        transform: translateY(-2px);
        color: white;
    }
    .btn-save {
        background: linear-gradient(135deg, #059669 0%, #10b981 100%);
        color: white;
    }
    .btn-save:hover {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(16, 185, 129, 0.4);
    }
</style>

<div class="container-custom">
    <div class="page-header">
        <h1 class="page-title">‚ûï Crear Nuevo Usuario</h1>
    </div>

    <div class="form-card">
        {{ include('user/_form.html.twig', {'button_label': 'üíæ Crear Usuario'}) }}

        <div class="action-buttons">
            <a href="{{ path('app_home') }}" class="btn-custom btn-back">
                üè† Volver al Dashboard
            </a>
            <a href="{{ path('app_user_index') }}" class="btn-custom btn-back">
                ‚¨ÖÔ∏è Volver al Listado
            </a>
        </div>
    </div>
</div>
{% endblock %}
