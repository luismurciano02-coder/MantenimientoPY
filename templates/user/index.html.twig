{% extends 'base.html.twig' %}

{% block title %}Gesti√≥n de Usuarios{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(135deg, #000000 0%, #1a1a2e 50%, #0f3460 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 20px 0;
    }
    .container-custom {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 15px;
    }
    .page-header {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border: 2px solid rgba(37, 99, 235, 0.4);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .page-title {
        margin: 0;
        background: linear-gradient(90deg, #2563eb 0%, #60a5fa 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: bold;
        font-size: 2.5rem;
    }
    .btn-create {
        background: linear-gradient(135deg, #059669 0%, #10b981 100%);
        color: white;
        padding: 12px 30px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
    .btn-create:hover {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(16, 185, 129, 0.4);
        color: white;
    }
    .table-container {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border: 2px solid rgba(37, 99, 235, 0.3);
    }
    .table-responsive {
        overflow-x: visible !important;
    }
    .table-modern {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin: 0;
    }
    .table-modern thead {
        background: linear-gradient(135deg, #1e3c72 0%, #2563eb 100%);
    }
    .table-modern thead th {
        color: white;
        padding: 15px;
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 0.5px;
        border: none;
    }
    .table-modern thead th:first-child {
        border-radius: 10px 0 0 0;
    }
    .table-modern thead th:last-child {
        border-radius: 0 10px 0 0;
    }
    .table-modern tbody {
        background: rgba(26, 26, 46, 0.5);
    }
    .table-modern tbody tr {
        border-bottom: 1px solid rgba(37, 99, 235, 0.2);
        transition: all 0.3s ease;
    }
    .table-modern tbody tr:hover {
        background-color: rgba(37, 99, 235, 0.15);
        transform: scale(1.01);
    }
    .table-modern tbody td {
        padding: 15px;
        color: #e5e7eb;
        border: none;
    }
    .table-modern tbody tr:last-child td:first-child {
        border-radius: 0 0 0 10px;
    }
    .table-modern tbody tr:last-child td:last-child {
        border-radius: 0 0 10px 0;
    }
    .badge {
        display: inline-block;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        margin: 2px;
    }
    .badge-role {
        background: linear-gradient(135deg, #1e3c72 0%, #2563eb 100%);
        color: white;
    }
    .action-btn {
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        display: inline-block;
        margin: 2px;
        border: 2px solid transparent;
    }
    .btn-show {
        background: linear-gradient(135deg, #1e3c72 0%, #2563eb 100%);
        color: white;
    }
    .btn-show:hover {
        background: linear-gradient(135deg, #2563eb 0%, #1e3c72 100%);
        transform: scale(1.05);
        box-shadow: 0 5px 15px rgba(37, 99, 235, 0.4);
        color: white;
    }
    .btn-edit {
        background: linear-gradient(135deg, #0f3460 0%, #1a73e8 100%);
        color: white;
    }
    .btn-edit:hover {
        background: linear-gradient(135deg, #1a73e8 0%, #0f3460 100%);
        transform: scale(1.05);
        box-shadow: 0 5px 15px rgba(26, 115, 232, 0.4);
        color: white;
    }
    .btn-delete {
        background: linear-gradient(135deg, #1a1a2e 0%, #dc2626 100%);
        color: white;
    }
    .btn-delete:hover {
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        transform: scale(1.05);
        box-shadow: 0 5px 15px rgba(220, 38, 38, 0.4);
        color: white;
    }
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: rgba(255, 255, 255, 0.6);
    }
    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 20px;
    }
    .btn-back {
        background: linear-gradient(135deg, #4b5563 0%, #6b7280 100%);
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 20px;
    }
    .btn-back:hover {
        background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        transform: translateY(-2px);
        color: white;
    }
</style>

<div class="container-custom">
    <a href="{{ path('app_home') }}" class="btn-back">‚¨ÖÔ∏è Volver al Dashboard</a>
    
    <div class="page-header">
        <h1 class="page-title">üë• Gesti√≥n de Usuarios</h1>
        <a href="{{ path('app_user_new') }}" class="btn-create">
            ‚ûï Nuevo Usuario
        </a>
    </div>

    <div class="table-container">
        {% if users|length > 0 %}
        <div class="table-responsive">
            <table class="table-modern">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Provincia</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.nombre }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge badge-role">{{ role }}</span>
                            {% endfor %}
                        </td>
                        <td>{{ user.provincias ? user.provincias.nombre : 'N/A' }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="action-btn btn-show">
                                üëÅÔ∏è Ver
                            </a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="action-btn btn-edit">
                                ‚úèÔ∏è Editar
                            </a>
                            <button onclick="confirmDelete('{{ path('app_user_delete', {'id': user.id}) }}')" class="action-btn btn-delete">
                                üóëÔ∏è Eliminar
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="empty-state">
            <div class="empty-state-icon">üì≠</div>
            <h3>No hay usuarios registrados</h3>
            <p>Comienza creando tu primer usuario</p>
        </div>
        {% endif %}
    </div>
</div>

<script>
function confirmDelete(deleteUrl) {
    Swal.fire({
        title: '¬øEst√°s seguro?',
        text: "Esta acci√≥n no se puede deshacer",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#dc2626',
        cancelButtonColor: '#2563eb',
        confirmButtonText: 'S√≠, eliminar',
        cancelButtonText: 'Cancelar',
        background: '#1a1a2e',
        color: '#e5e7eb'
    }).then((result) => {
        if (result.isConfirmed) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = deleteUrl;
            
            const csrfInput = document.createElement('input');
            csrfInput.type = 'hidden';
            csrfInput.name = '_token';
            csrfInput.value = '{{ csrf_token("delete") }}';
            
            const methodInput = document.createElement('input');
            methodInput.type = 'hidden';
            methodInput.name = '_method';
            methodInput.value = 'DELETE';
            
            form.appendChild(csrfInput);
            form.appendChild(methodInput);
            document.body.appendChild(form);
            form.submit();
        }
    });
}
</script>
{% endblock %}
