{% extends 'base.html.twig' %}

{% block title %}Editar Usuario{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(135deg, #000000 0%, #1a1a2e 50%, #0f3460 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 20px 0;
    }
    .container-custom {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 15px;
    }
    .page-header {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border: 2px solid rgba(37, 99, 235, 0.4);
        text-align: center;
    }
    .page-title {
        margin: 0;
        background: linear-gradient(90deg, #2563eb 0%, #60a5fa 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: bold;
        font-size: 2.5rem;
    }
    .form-card {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border: 2px solid rgba(37, 99, 235, 0.3);
        margin-bottom: 30px;
    }
    .form-label {
        color: #ffffff;
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .form-control {
        background: rgba(26, 26, 46, 0.5);
        border: 2px solid rgba(37, 99, 235, 0.3);
        color: #ffffff;
        border-radius: 8px;
        padding: 12px 15px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }
    .form-control:focus {
        background: rgba(26, 26, 46, 0.8);
        border-color: #2563eb;
        color: #ffffff;
        box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.25);
    }
    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }
    .form-control option {
        background: #1a1a2e;
        color: #ffffff;
    }
    .form-check {
        margin-bottom: 15px;
        padding: 12px 15px;
        background: rgba(37, 99, 235, 0.2);
        border-radius: 8px;
        border: 2px solid rgba(37, 99, 235, 0.4);
        transition: all 0.3s ease;
    }
    .form-check:hover {
        background: rgba(37, 99, 235, 0.3);
        border-color: #2563eb;
    }
    .form-check-input {
        width: 22px;
        height: 22px;
        margin-right: 12px;
        cursor: pointer;
        accent-color: #2563eb;
    }
    .form-check-label {
        color: #ffffff;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
    }
    .form-text {
        color: rgba(255, 255, 255, 0.6) !important;
        font-size: 0.875rem;
        margin-top: 5px;
    }
    /* Forzar color blanco en todos los elementos del formulario */
    .form-card input,
    .form-card select,
    .form-card textarea,
    .form-card label {
        color: #ffffff !important;
    }
    .form-card input::placeholder,
    .form-card textarea::placeholder {
        color: rgba(255, 255, 255, 0.5) !important;
    }
    .action-buttons {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        margin-top: 30px;
    }
    .btn-custom {
        padding: 12px 30px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
    }
    .btn-back {
        background: linear-gradient(135deg, #4b5563 0%, #6b7280 100%);
        color: white;
    }
    .btn-back:hover {
        background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        transform: translateY(-2px);
        color: white;
    }
    .btn-save {
        background: linear-gradient(135deg, #059669 0%, #10b981 100%);
        color: white;
    }
    .btn-save:hover {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(16, 185, 129, 0.4);
    }
    .btn-delete {
        background: linear-gradient(135deg, #1a1a2e 0%, #dc2626 100%);
        color: white;
    }
    .btn-delete:hover {
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(220, 38, 38, 0.4);
    }
    .btn-new-factura {
        background: linear-gradient(135deg, #059669 0%, #10b981 100%);
        color: white;
    }
    .btn-new-factura:hover {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(16, 185, 129, 0.4);
        color: white;
    }
    .facturas-section {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border: 2px solid rgba(37, 99, 235, 0.3);
        margin-bottom: 30px;
    }
    .section-title {
        color: #60a5fa;
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid rgba(37, 99, 235, 0.3);
        padding-bottom: 10px;
    }
    .table-facturas {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-top: 20px;
    }
    .table-facturas thead {
        background: linear-gradient(135deg, #1e3c72 0%, #2563eb 100%);
    }
    .table-facturas thead th {
        color: white;
        padding: 12px;
        text-transform: uppercase;
        font-weight: 600;
        font-size: 0.9rem;
    }
    .table-facturas tbody td {
        padding: 15px 12px;
        color: #e5e7eb;
        border-bottom: 1px solid rgba(37, 99, 235, 0.2);
    }
    .table-facturas tbody tr:hover {
        background-color: rgba(37, 99, 235, 0.15);
    }
    .badge-importe {
        background: linear-gradient(135deg, #059669 0%, #10b981 100%);
        color: white;
        padding: 5px 12px;
        border-radius: 15px;
        font-weight: 600;
    }
    .empty-facturas {
        text-align: center;
        padding: 40px;
        color: rgba(255, 255, 255, 0.6);
    }
    .btn-factura-action {
        padding: 6px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-block;
        margin: 2px;
    }
    .btn-view-factura {
        background: linear-gradient(135deg, #1e3c72 0%, #2563eb 100%);
        color: white;
    }
    .btn-view-factura:hover {
        background: linear-gradient(135deg, #2563eb 0%, #1e3c72 100%);
        transform: scale(1.05);
        color: white;
    }
    .btn-edit-factura {
        background: linear-gradient(135deg, #0f3460 0%, #1a73e8 100%);
        color: white;
    }
    .btn-edit-factura:hover {
        background: linear-gradient(135deg, #1a73e8 0%, #0f3460 100%);
        transform: scale(1.05);
        color: white;
    }
    .btn-delete-factura {
        background: linear-gradient(135deg, #1a1a2e 0%, #dc2626 100%);
        color: white;
        border: none;
        cursor: pointer;
    }
    .btn-delete-factura:hover {
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        transform: scale(1.05);
    }
</style>

<div class="container-custom">
    <div class="page-header">
        <h1 class="page-title">‚úèÔ∏è Editar Usuario</h1>
    </div>

    <div class="form-card">
        {{ include('user/_form.html.twig', {'button_label': 'üíæ Actualizar Usuario'}) }}

        <div class="action-buttons">
            <a href="{{ path('app_user_index') }}" class="btn-custom btn-back">
                ‚¨ÖÔ∏è Volver al Listado
            </a>
            <button type="button" onclick="confirmDelete()" class="btn-custom btn-delete">
                üóëÔ∏è Eliminar Usuario
            </button>
        </div>
    </div>

    <!-- Secci√≥n de Facturas del Usuario -->
    <div class="facturas-section">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <h2 class="section-title" style="margin: 0;">üìÑ Facturas del Usuario</h2>
            <a href="{{ path('app_factura_new', {'userId': user.id}) }}" class="btn-custom btn-new-factura">
                ‚ûï Nueva Factura
            </a>
        </div>

        {% if user.facturas|length > 0 %}
        <div style="overflow-x: auto;">
            <table class="table-facturas">
                <thead>
                    <tr>
                        <th>Concepto</th>
                        <th>Fecha</th>
                        <th>Importe</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for factura in user.facturas %}
                    <tr>
                        <td>{{ factura.concepto|default('Sin concepto') }}</td>
                        <td>{{ factura.fecha ? factura.fecha|date('d/m/Y H:i') : 'N/A' }}</td>
                        <td><span class="badge-importe">{{ factura.importe ? factura.importe ~ '‚Ç¨' : 'N/A' }}</span></td>
                        <td class="text-center">
                            <a href="{{ path('app_factura_show', {'id': factura.id}) }}" class="btn-factura-action btn-view-factura">
                                üëÅÔ∏è Ver
                            </a>
                            <a href="{{ path('app_factura_edit', {'id': factura.id}) }}" class="btn-factura-action btn-edit-factura">
                                ‚úèÔ∏è Editar
                            </a>
                            <button onclick="confirmDeleteFactura('{{ path('app_factura_delete', {'id': factura.id}) }}')" class="btn-factura-action btn-delete-factura">
                                üóëÔ∏è Eliminar
                            </button>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="empty-facturas">
            <div style="font-size: 3rem; margin-bottom: 15px;">üì≠</div>
            <h3>No hay facturas registradas para este usuario</h3>
            <p>Haz clic en "Nueva Factura" para crear la primera factura</p>
        </div>
        {% endif %}
    </div>
</div>

<form id="deleteForm" method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" style="display: none;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <input type="hidden" name="_method" value="DELETE">
</form>

<script>
function confirmDelete() {
    Swal.fire({
        title: '¬øEst√°s seguro?',
        text: "Esta acci√≥n no se puede deshacer",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#dc2626',
        cancelButtonColor: '#2563eb',
        confirmButtonText: 'S√≠, eliminar',
        cancelButtonText: 'Cancelar',
        background: '#1a1a2e',
        color: '#e5e7eb'
    }).then((result) => {
        if (result.isConfirmed) {
            document.getElementById('deleteForm').submit();
        }
    });
}

function confirmDeleteFactura(deleteUrl) {
    Swal.fire({
        title: '¬øEst√°s seguro?',
        text: "¬øQuieres eliminar esta factura?",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#dc2626',
        cancelButtonColor: '#2563eb',
        confirmButtonText: 'S√≠, eliminar',
        cancelButtonText: 'Cancelar',
        background: '#1a1a2e',
        color: '#e5e7eb'
    }).then((result) => {
        if (result.isConfirmed) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = deleteUrl;
            
            const csrfInput = document.createElement('input');
            csrfInput.type = 'hidden';
            csrfInput.name = '_token';
            csrfInput.value = '{{ csrf_token("delete") }}';
            
            const methodInput = document.createElement('input');
            methodInput.type = 'hidden';
            methodInput.name = '_method';
            methodInput.value = 'DELETE';
            
            form.appendChild(csrfInput);
            form.appendChild(methodInput);
            document.body.appendChild(form);
            form.submit();
        }
    });
}
</script>
{% endblock %}
