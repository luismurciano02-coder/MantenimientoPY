{% extends 'base.html.twig' %}

{% block title %}Ver Usuario{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(135deg, #000000 0%, #1a1a2e 50%, #0f3460 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 20px 0;
    }
    .container-custom {
        max-width: 900px;
        margin: 0 auto;
        padding: 0 15px;
    }
    .page-header {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border: 2px solid rgba(37, 99, 235, 0.4);
        text-align: center;
    }
    .page-title {
        margin: 0;
        background: linear-gradient(90deg, #2563eb 0%, #60a5fa 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: bold;
        font-size: 2.5rem;
    }
    .card-detail {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border: 2px solid rgba(37, 99, 235, 0.3);
        margin-bottom: 30px;
    }
    .detail-row {
        display: flex;
        padding: 20px 0;
        border-bottom: 1px solid rgba(37, 99, 235, 0.2);
        align-items: center;
    }
    .detail-row:last-child {
        border-bottom: none;
    }
    .detail-label {
        font-weight: 600;
        color: #60a5fa;
        font-size: 1.1rem;
        min-width: 150px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .detail-value {
        color: #e5e7eb;
        font-size: 1.1rem;
        flex: 1;
    }
    .badge {
        display: inline-block;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        margin: 2px;
    }
    .badge-role {
        background: linear-gradient(135deg, #1e3c72 0%, #2563eb 100%);
        color: white;
    }
    .action-buttons {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        margin-top: 30px;
    }
    .btn-custom {
        padding: 12px 30px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
    }
    .btn-back {
        background: linear-gradient(135deg, #4b5563 0%, #6b7280 100%);
        color: white;
    }
    .btn-back:hover {
        background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(107, 114, 128, 0.4);
        color: white;
    }
    .btn-edit {
        background: linear-gradient(135deg, #0f3460 0%, #1a73e8 100%);
        color: white;
    }
    .btn-edit:hover {
        background: linear-gradient(135deg, #1a73e8 0%, #0f3460 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(26, 115, 232, 0.4);
        color: white;
    }
    .btn-delete {
        background: linear-gradient(135deg, #1a1a2e 0%, #dc2626 100%);
        color: white;
    }
    .btn-delete:hover {
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(220, 38, 38, 0.4);
        color: white;
    }
</style>

<div class="container-custom">
    <div class="page-header">
        <h1 class="page-title">üë§ Detalles del Usuario</h1>
    </div>

    <div class="card-detail">
        <div class="detail-row">
            <div class="detail-label">üÜî ID:</div>
            <div class="detail-value"><strong>#{{ user.id }}</strong></div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">üë§ Nombre:</div>
            <div class="detail-value">{{ user.nombre }}</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">üìß Email:</div>
            <div class="detail-value">{{ user.email }}</div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">üîë Roles:</div>
            <div class="detail-value">
                {% for role in user.roles %}
                    <span class="badge badge-role">{{ role }}</span>
                {% endfor %}
            </div>
        </div>
        
        <div class="detail-row">
            <div class="detail-label">üó∫Ô∏è Provincia:</div>
            <div class="detail-value">{{ user.provincias ? user.provincias.nombre : 'No asignada' }}</div>
        </div>

        <div class="action-buttons">
            <a href="{{ path('app_user_index') }}" class="btn-custom btn-back">
                ‚¨ÖÔ∏è Volver al Listado
            </a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn-custom btn-edit">
                ‚úèÔ∏è Editar Usuario
            </a>
            <button onclick="confirmDelete()" class="btn-custom btn-delete">
                üóëÔ∏è Eliminar Usuario
            </button>
        </div>
    </div>
</div>

<form id="deleteForm" method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" style="display: none;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <input type="hidden" name="_method" value="DELETE">
</form>

<script>
function confirmDelete() {
    Swal.fire({
        title: '¬øEst√°s seguro?',
        text: "Esta acci√≥n no se puede deshacer",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#dc2626',
        cancelButtonColor: '#2563eb',
        confirmButtonText: 'S√≠, eliminar',
        cancelButtonText: 'Cancelar',
        background: '#1a1a2e',
        color: '#e5e7eb'
    }).then((result) => {
        if (result.isConfirmed) {
            document.getElementById('deleteForm').submit();
        }
    });
}
</script>
{% endblock %}
