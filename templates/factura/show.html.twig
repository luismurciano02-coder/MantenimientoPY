{% extends 'base.html.twig' %}

{% block title %}Factura{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(135deg, #000000 0%, #1a1a2e 50%, #0f3460 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 20px 0;
    }
    .container-custom {
        max-width: 900px;
        margin: 0 auto;
        padding: 0 15px;
    }
    .page-header {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border: 2px solid rgba(37, 99, 235, 0.4);
        text-align: center;
    }
    .page-title {
        margin: 0;
        background: linear-gradient(90deg, #2563eb 0%, #60a5fa 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: bold;
        font-size: 2.5rem;
    }
    .detail-card {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border: 2px solid rgba(37, 99, 235, 0.3);
        margin-bottom: 30px;
    }
    .table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 15px;
    }
    .table tbody tr {
        background: rgba(37, 99, 235, 0.1);
        border-radius: 8px;
    }
    .table th {
        color: #60a5fa;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 15px 20px;
        text-align: left;
        font-size: 1rem;
    }
    .table td {
        color: #ffffff;
        padding: 15px 20px;
        font-size: 1.1rem;
    }
    .action-buttons {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        margin-top: 30px;
    }
    .btn-custom {
        padding: 12px 30px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
    }
    .btn-back {
        background: linear-gradient(135deg, #4b5563 0%, #6b7280 100%);
        color: white;
    }
    .btn-back:hover {
        background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
        transform: translateY(-2px);
        color: white;
    }
    .btn-edit {
        background: linear-gradient(135deg, #0f3460 0%, #1a73e8 100%);
        color: white;
    }
    .btn-edit:hover {
        background: linear-gradient(135deg, #1a73e8 0%, #0f3460 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(26, 115, 232, 0.4);
        color: white;
    }
    .btn-delete {
        background: linear-gradient(135deg, #1a1a2e 0%, #dc2626 100%);
        color: white;
    }
    .btn-delete:hover {
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(220, 38, 38, 0.4);
        color: white;
    }
</style>

<div class="container-custom">
    <div class="page-header">
        <h1 class="page-title">üìÑ Detalle de Factura</h1>
    </div>

    <div class="detail-card">
        <table class="table">
            <tbody>
                <tr>
                    <th>Fecha</th>
                    <td>{{ factura.fecha ? factura.fecha|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Importe</th>
                    <td>{{ factura.importe }}</td>
                </tr>
            </tbody>
        </table>

        <div class="action-buttons">
            <a href="{{ path('app_home') }}" class="btn-custom btn-back">
                üè† Volver al Dashboard
            </a>
            <a href="{{ path('app_factura_index') }}" class="btn-custom btn-back">
                ‚¨ÖÔ∏è Volver al Listado
            </a>

            <a href="{{ path('app_factura_edit', {'id': factura.id}) }}" class="btn-custom btn-edit">
                ‚úèÔ∏è Editar Factura
            </a>

            {{ include('factura/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
